<!-- ======= Blog Header ======= -->
<div class="header-bg page-area">
    <div class="container position-relative">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="slider-content text-center">
                    <div class="header-bottom">
                        <div class="layer2">
                            <h1 class="title2">Liste des sports</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Blog Header -->
<div class="container">
    <section class="gallery-block cards-gallery">
        <div class="alert alert-light" role="alert">
            <a href="/api/sports/new" class="btn btn-primary btn-lg btn-block">Nouveau</a>
            <a href="/" class="btn btn-warning btn-lg btn-block">Annuler</a>
        </div>
        <div class="row">
            {{#each sports}}
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 transform-on-hover">
                    <a class="lightbox"
                        href="https://www.mairieguerledan.bzh/wp-content/uploads/2020/01/sport-dessin.jpg">
                        <img src="https://www.mairieguerledan.bzh/wp-content/uploads/2020/01/sport-dessin.jpg"
                            alt="{{name}}" class="card-img-top">
                    </a>
                    <div class="card-body">
                        <h6><a href="#" class="btn btn-success" style="pointer-events: none;">{{name}}</a></h6>
                        <h6><a href="#" style="pointer-events: none;">{{category}}</a></h6>
                        <p class="text-muted card-text badge badge-info"><a href="/api/sports/{{_id}}/athletes">Athletes</a></p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>