<div class="container">
    <section class="gallery-block cards-gallery">
                <div class="heading">
                <h2>Liste des sports</h2>
                </div>
            <div class="alert alert-light" role="alert">
                <a href="/api/sports/new" class="btn btn-primary btn-lg btn-block">Nouveau</a>
                <a href="/" class="btn btn-warning btn-lg btn-block">Annuler</a>
                </div>
                
                <div class="row">
                    {{#each sports}}
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 transform-on-hover">
                            <a class="lightbox" href="https://www.mairieguerledan.bzh/wp-content/uploads/2020/01/sport-dessin.jpg">
                                <img src="https://www.mairieguerledan.bzh/wp-content/uploads/2020/01/sport-dessin.jpg" alt="{{name}}" class="card-img-top">
                            </a>
                            <div class="card-body">
                                <h6><a href="#"  class="btn btn-success">{{name}}</a></h6>
                                <h6><a href="#">{{category}}</a></h6>
                                <p class="text-muted card-text"><a href="/api/sports/{{_id}}/athletes" class="badge badge-info">Athletes</a></p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
        </section>
    </div>