    $(document).ready(function () {
        window.prettyPrint() && prettyPrint();
    });
</script>
<style>
    .nav-link.active {
        font-weight: bold;
    }
    .badge {
        font-size: 85%;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example-legacyFiltering').multiselect({
            enableFiltering: true,
            templates: {
                filter: '<div class="multiselect-filter"><div class="input-group input-group-sm p-1"><div class="input-group-prepend"><i class="input-group-text fas fa-search"></i></div><input class="form-control multiselect-search" type="text" /><div class="input-group-append"><button class="multiselect-clear-filter input-group-text" type="button"><i class="fas fa-times"></i></button></div></div></div>'
            }
        });
    });
</script>
<h2>Nouvel athlète</h2>

<div class="container-fluid">
    <form method="post" action="/api/athletes">
        <div class="form-group">
            <label for="firstName">Prénom</label>
            <input name="firstName" type="text" class="form-control" id="firstName">
        </div>
        <div class="form-group">
            <label for="lastName">Nom</label>
            <input name="lastName" type="text" class="form-control" id="lastName">
        </div>
        <div class="form-group">
        <label for="gender">Genre</label>
            <select id="gender" name="gender" class="custom-select">
                <option selected value="None">Non défini</option>
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
        </div>
        <div class="example">
            <label for="example-legacyFiltering">Nationalité</label>
            <span class="multiselect-native-select">
                <select id="example-legacyFiltering" tabindex="-1" name="athletes">
                {{#each countries}}
                    <option value="{{@key}}">{{this}}</option>
                {{/each}}
            </select>
            <div class="btn-group">
                <div class="multiselect-container dropdown-menu">
                    <div class="multiselect-filter">
                        <div class="input-group input-group-sm p-1">
                            <div class="input-group-prepend"><i class="input-group-text fas fa-search"></i></div><input
                                class="form-control multiselect-search" type="text" placeholder="Search">
                            <div class="input-group-append"><button class="multiselect-clear-filter input-group-text"
                                    type="button"><i class="fas fa-times"></i></button></div>
                        </div>
                    </div><button type="button" class="multiselect-option dropdown-item" title="Option 1"><span
                            class="form-check"><input class="form-check-input" type="checkbox" value="1"><label
                                class="form-check-label">Option 1</label></span></button><button type="button"
                        class="multiselect-option dropdown-item active" title="Option 2"><span class="form-check"><input
                                class="form-check-input" type="checkbox" value="2"><label
                                class="form-check-label">Option
                                2</label></span></button><button type="button"
                        class="multiselect-option dropdown-item active" title="Option 3"><span class="form-check"><input
                                class="form-check-input" type="checkbox" value="3"><label
                                class="form-check-label">Option
                                3</label></span></button><button type="button" class="multiselect-option dropdown-item"
                        title="Option 4"><span class="form-check"><input class="form-check-input" type="checkbox"
                                value="4"><label class="form-check-label">Option 4</label></span></button><button
                        type="button" class="multiselect-option dropdown-item active" title="Option 5"><span
                            class="form-check"><input class="form-check-input" type="checkbox" value="5"><label
                                class="form-check-label">Option 5</label></span></button>
                </div>
            </div>
        </span>
    </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
        <a href="/api/athletes/" data-id="{{_id}}" class="btn btn-cancel">Annuler</a>
    </form>
</div>